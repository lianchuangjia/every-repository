/* pages/search/search.wxss */
.item-list-group{
  padding: 10rpx 20rpx;
}
.item-list-group .item-group{
padding: 10rpx 0;
border-bottom: 1px solid #e4e4e4;
display: flex;
}
.item-group .thunmbnail{
  width: 80rpx;
  height: 100rpx;
  margin-right: 20rpx;

}
.item-group .info-group{
  flex: 1;
display: flex;
/* 改变主轴方向 上下*/
flex-direction: column;
justify-content: space-between;
}
.info-group .title{
  font-size: 32rpx;
}
.info-group .rate-year{
  font-size: 28rpx;
  color: #7b7b7b;
}
/* 历史记录 */
.history-list-group{
  padding: 10rpx 20rpx; 
}
.history-list-group .history-title{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  background: #f9f9f9;
  font-size: 28rpx;
  color: #9c9c9c;
}
.history-list-group .history-group{
  font-size: 32rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #e4e4e4;
}