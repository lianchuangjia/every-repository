.container{
  /* padding: 40rpx; */
  background: #e22b2b;
  
}
.container .weibo-group{
    width: 100%;
    margin-bottom: 30rpx;
    background: #fff;
    padding: 40rpx 20px;
    box-sizing: border-box;
    
}
.weibo-group .user-group{
    display: flex;
}
.user-group .avater{
    width:74rpx;
    height: 74rpx;
    border-radius: 50%;
}
.user-group .right-info{
   
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    
}
.right-info .username{
   font-size: 28rpx;
   color: #323232;
}
.right-info .detail-info{
    font-size: 18rpx;
    color: #656565;
    display: flex;
}
.detail-info .time{
   margin-right: 10rpx;
}
.detail-info .dizhi{
 margin-right: 10rpx;
 
}

.weibo-content-group{
    padding-top: 30rpx;
}
.weibo-content-group .image-list-group{
    padding-top: 30rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap:wrap;
}
.image-list-group image{
    margin-bottom: 5rpx;

}

.weibo-handle{
 display: flex;
 padding-top: 30rpx;
 font-size: 28rpx;
}
.weibo-handle image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.weibo-handle view{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.write-weibo-btn{
    position: fixed;
    right: 50rpx;
    bottom: 100rpx;
    background: rgb(116, 194, 223);
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 100rpx;
    color: #fff;
    box-shadow: 0 0 5px rgba(0, 0, 0, 5);

}
.write-weibo-btn view{
    margin-bottom: 19rpx;
}